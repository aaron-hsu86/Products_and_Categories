@model Product
<form asp-controller="Product" asp-action="Create" method="post" class="d-flex flex-column gap-2">
    <div class="d-flex justify-content-between gap-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" type="text">
    </div>
    <span asp-validation-for="Name" class="text-danger font-weight-bold"></span>
    <div class="d-flex justify-content-between gap-3">
        <label asp-for="Description"></label>
        <input asp-for="Description" type="text">
    </div>
    <span asp-validation-for="Description" class="text-danger font-weight-bold"></span>
    <div class="d-flex justify-content-between gap-3">
        <label asp-for="Price"></label>
        <input asp-for="Price" type="number" step=".01">
    </div>
    <span asp-validation-for="Price" class="text-danger font-weight-bold"></span><br>
    
    <div>
        <button>Create</button>
    </div>
</form>